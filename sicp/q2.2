(define (make-point x y)
    (cons x y)
)

(define (x-point p)
    (car p)
)

(define (y-point p)
    (cdr p)
)
(define (average x y)
    (/ (+ x y) 2.0)
)
(define (midpoint p q)
    (make-point (average (x-point p) (x-point q)) (average (y-point p) (y-point q)))
)

(define (print-point p)
    (display "(")
    (display (x-point p))
    (display ",")
    (display (y-point p))
    (display ")")
)

(print-point (midpoint (make-point 1 2) (make-point 3 4)))

(define (make-segment s e)
    (cons s e)
)
(define (start-segment seg)
    (car seg)
)
(define (end-segment seg)
    (cdr seg)
)
(define (midpoint-segment seg)
    (midpoint (start-segment seg) (end-segment seg))
)

(define start (make-point 1 3))
(define end (make-point 4 3))
(define seg (make-segment start end))
(define mid (midpoint-segment seg))
(print-point mid)
